<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:background="@color/black_seven"
            android:fillViewport="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp">


      <TextView
          android:id="@+id/itemDetailTitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:freezesText="true"
          android:layout_marginTop="10dp"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:textColor="@color/almost_white"

          />

         <ImageView
          android:id="@+id/itemDetailImage"
          android:layout_width="600dp"
          android:layout_height="341dp"
          android:scaleType="centerCrop"
          android:layout_below="@id/itemDetailTitle"
          tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/itemDetailYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/almost_white"
            android:freezesText="true"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/itemDetailImage"
            />

        <TextView
            android:id="@+id/item_detail_description"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textColor="@color/almost_white"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/itemDetailYear"
            />
        </RelativeLayout>

</ScrollView>